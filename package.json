{
  "name": "file-bunny",
  "displayName": "File Bunny",
  "publisher": "robole",
  "author": {
    "name": "Rob O'Leary"
  },
  "description": "Perform file actions in a short hop. 🐰⌨️",
  "icon": "img/logo.png",
  "version": "0.3.0",
  "engines": {
    "vscode": "^1.46.0",
    "node": ">=12"
  },
  "categories": [
    "Other"
  ],
  "galleryBanner": {
    "color": "#ffa900",
    "theme": "light"
  },
  "keywords": [
    "file",
    "files",
    "file utils",
    "move file",
    "rename file",
    "duplicate file",
    "create file",
    "open file",
    "file manager",
    "file explorer",
    "new file",
    "advanced new file",
    "delete file",
    "copy file name",
    "file browser"
  ],
  "bugs": {
    "url": "https://github.com/robole/file-bunny/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/robole/file-bunny"
  },
  "license": "",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "filebunny.createFile",
        "category": "File Bunny",
        "title": "Create New File"
      },
      {
        "command": "filebunny.moveFile",
        "category": "File Bunny",
        "title": "Move Active File"
      },
      {
        "command": "filebunny.duplicateFile",
        "category": "File Bunny",
        "title": "Duplicate Active File"
      },
      {
        "command": "filebunny.renameFile",
        "category": "File Bunny",
        "title": "Rename Active File"
      },
      {
        "command": "filebunny.deleteFile",
        "category": "File Bunny",
        "title": "Delete Active File"
      },
      {
        "command": "filebunny.openFolder",
        "category": "File Bunny",
        "title": "Open Folder"
      },
      {
        "command": "filebunny.goToTopActiveFile",
        "category": "File Bunny",
        "title": "Go to Top of Active File"
      },
      {
        "command": "filebunny.goToBottomActiveFile",
        "category": "File Bunny",
        "title": "Go to Bottom of Active File"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "File Bunny",
      "properties": {
        "filebunny.excludes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "**/.git/**",
            "**/node_modules/**"
          ],
          "description": "Glob patterns for excluding files and folders from file lists. It is similar to `files.exclude`. Patterns must match on absolute paths (i.e. prefix with **, or use the full path). \n\nDots are treated as normal characters (dot:true option for glob-node). If you want to exclude all dot folders, use the pattern: '**/.*/**'."
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint src --ext=js",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "prettier --check",
    "prettier:fix": "npm run prettier -- --write",
    "format": "npm run prettier:fix && npm run lint:fix",
    "test": "node ./test/runTest.js",
    "webpack:prod": "webpack --mode development",
    "webpack:dev": "webpack --mode development --watch",
    "vscode:prepublish": "webpack --mode production",
    "build": "vsce package ."
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.46.0",
    "chai": "^4.3.4",
    "eslint": "^7.19.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-roboleary-node": "0.0.2",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-node": "^11.1.0",
    "mocha": "^8.2.1",
    "prettier": "^2.0.5",
    "typescript": "^4.1.3",
    "vsce": "^1.77.0",
    "vscode-test": "^1.5.0",
    "webpack": "^4.44.0",
    "webpack-cli": "^3.3.12"
  },
  "dependencies": {
    "glob": "^7.1.6"
  }
}
